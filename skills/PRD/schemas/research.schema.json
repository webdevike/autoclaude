{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Research Questions",
  "description": "Schema for research.yaml files in PRDs",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["text", "mode"],
    "properties": {
      "text": {
        "type": "string",
        "description": "The research question"
      },
      "mode": {
        "type": "string",
        "enum": ["answer", "deep-research"],
        "description": "Research mode: answer for quick lookup, deep-research for comprehensive"
      },
      "answer": {
        "type": "string",
        "description": "The answer found through research"
      },
      "citations": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["url", "title"],
          "properties": {
            "url": {
              "type": "string",
              "format": "uri"
            },
            "title": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}
